<body>

<div class="container">
    <h2>Calcolatrice Base</h2>
    
    <input type="number" id="num1" placeholder="Inserisci il primo numero" value="0">
    <input type="number" id="num2" placeholder="Inserisci il secondo numero" value="0">

    <div class="buttons">
        <button class="operazione" onclick="calcola('+')">Somma (+)</button>
        <button class="operazione" onclick="calcola('-')">Sottrazione (-)</button>
        <button class="operazione" onclick="calcola('*')">Moltiplicazione (*)</button>
        <button class="operazione" onclick="calcola('/')">Divisione (/)</button>
    </div>

    <p id="risultato">Risultato: 0</p>
</div>

<script>
    // JAVASCRIPT: LOGICA DI CALCOLO
    
    // Funzione principale che viene chiamata al click di ogni pulsante
    function calcola(operatore) {
        // 1. Ottiene i valori dai campi di input
        // I valori vengono automaticamente convertiti in numeri reali (float)
        const num1 = parseFloat(document.getElementById('num1').value);
        const num2 = parseFloat(document.getElementById('num2').value);
        let risultato;
        let operazioneTesto;
        let errore = false;

        // 2. Controllo se i numeri sono validi
        if (isNaN(num1) || isNaN(num2)) {
            document.getElementById('risultato').innerHTML = "Errore: Inserisci numeri validi!";
            return; // Interrompe la funzione
        }

        // 3. Esegue l'operazione in base all'operatore passato
        switch (operatore) {
            case '+':
                risultato = num1 + num2;
                operazioneTesto = " + ";
                break;
            case '-':
                risultato = num1 - num2;
                operazioneTesto = " - ";
                break;
            case '*':
                risultato = num1 * num2;
                operazioneTesto = " * ";
                break;
            case '/':
                if (num2 === 0) {
                    risultato = "Errore: Divisione per Zero!";
                    errore = true;
                } else {
                    risultato = num1 / num2;
                }
                operazioneTesto = " / ";
                break;
            default:
                errore = true;
                risultato = "Operatore non riconosciuto";
        }

        // 4. Visualizza il risultato nell'area designata
        const display = document.getElementById('risultato');
        
        if (errore) {
            display.innerHTML = risultato;
        } else {
            // Formatta il risultato finale
            let espressione = num1 + operazioneTesto + num2 + " = ";
            display.innerHTML = espressione + risultato.toFixed(2); // Mostra solo 2 decimali
        }
    }
</script>

</body>
</html>
